#:kivy 1.0.9
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
#    transition: FadeTransition()
    MenuScreen:
    CirkitScreen:

<MenuScreen>:
    name: 'menu'
    id: 'menu'
    levels: levels
    size: 960,640

    BoxLayout:
        orientation: 'vertical'
        rows: 2

        Label:
            text: "Application for Fundamentals of Digital Logic"
            size_hint: 1, .25
        GridLayout:
            cols: 5
            rows: 5
            size_hint: 1, 1
            id: levels

<CirkitScreen>:
    name: 'cirkit'
    id: 'cirkit'
    size: 960,640

    FloatLayout:
        Button:
            color: 0,1,0,1
            font_size: 25
            size_hint: 0.3,0.2
            on_release:
                app.root.transition.direction = 'right'
                app.root.current = "menu"
            pos_hint: {"right":1, "bottom":1}
            text: 'Back'


